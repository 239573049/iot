		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Update="serilog.Development.json">
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Controllers" />
	</ItemGroup>

</Project>
